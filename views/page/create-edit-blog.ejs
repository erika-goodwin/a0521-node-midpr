<%- include('../includes/head.ejs') %>
  <body class="h-full">
    <div>
        <%- include('../includes/nav.ejs') %>
        <main class="flex-1">
          <div class="py-6">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8">
              <h1 class="text-2xl font-semibold text-gray-900">Dashboard</h1>
            </div>
            <div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8">
              <!-- Replace with your content -->
              <div class="py-4">
                <div class="space-y-6 sm:px-6 lg:px-0 lg:col-span-9 border-4 border-dashed border-gray-200 rounded-lg">
                  <form action="/api/blogs<% if(editing) { %>/edit/<%= blogs._id %><% }else{ %>/create<% } %>" method="POST">
                    <div class="shadow sm:rounded-md sm:overflow-hidden">
                      <div class="bg-white py-6 px-4 space-y-6 sm:p-6">
                        <div>
                          <% if(editing) { %>
                          <h3 class="text-lg leading-6 font-medium text-gray-900">Edit the Blog Post</h3>
                          <% }else{ %>
                            <h3 class="text-lg leading-6 font-medium text-gray-900">Create a New Blog Post</h3>
                            <% } %>
                        </div>
                        
                        <div class="grid grid-cols-3 gap-6">
                          <div class="col-span-3 sm:col-span-2">
                            <label for="title" class="block text-sm font-medium text-gray-700"> Title* </label>
                            <div class="mt-1 rounded-md shadow-sm flex">
                              <input type="text" name="title" id="title" autocomplete="title" class=" shadow-sm p-1 focus:ring-teal-500 focus:border-teal-500 mt-1 block w-full sm:text-sm border border-gray-300 rounded-md" value="<% if(editing) { %><%= blogs.title %><% } %>" />
                            </div>
                          </div>
                          
                          <div class="col-span-3">
                            <label for="content" class="block text-sm font-medium text-gray-700"> Content </label>
                            <div class="mt-1">
                              <textarea id="content" name="content" rows="3" class="shadow-sm p-1 mt-1 block w-full sm:text-sm border border-gray-300 focus:ring-teal-500 focus:border-teal-500 rounded-md" placeholder=""><% if(editing) { %><%= blogs.content %><% } %></textarea>
                            </div>
                          </div>
                          
                          <div class="col-span-3 sm:col-span-2">
                            <label for="author" class="block text-sm font-medium text-gray-700"> Author* </label>
                            <div class="mt-1 rounded-md shadow-sm flex">
                              <input type="text" name="author" id="author" autocomplete="title" class="shadow-sm p-1 focus:ring-teal-500 focus:border-teal-500 mt-1 block w-1/3 sm:text-sm border border-gray-300 rounded-md" value="<% if(editing) { %><%= blogs.author %><% } %>" />
                            </div>
                          </div>

                          <div class="col-span-3 ">
                            <div class="col-span-3 sm:col-span-2">
                              <label for="image" class="block text-sm font-medium text-gray-700"> Image URL </label>
                              <div class="mt-1 rounded-md shadow-sm flex">
                                <input type="text" name="image" id="image" autocomplete="image" class=" shadow-sm p-1 focus:ring-teal-500 focus:border-teal-500 mt-1 block w-full sm:text-sm border border-gray-300 rounded-md" value="<% if(editing) { %><%= blogs.image %><% } %>" />
                              </div>
                            </div>
                      </div>
                      <div class="col-span-3 px-4 py-3 bg-gray-50 text-right sm:px-6">
                        <button type="submit" class="bg-teal-500 border border-transparent rounded-md shadow-sm py-2 px-4 inline-flex justify-center text-sm font-medium text-white hover:bg-teal-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500">Save</button>
                      </div>
                    </div>
                  </form>
                </div>
              </div>

              <!-- /End replace -->
            </div>
          </div>
        </main>
      </div>
    </div>
<%- include('../includes/end.ejs') %>